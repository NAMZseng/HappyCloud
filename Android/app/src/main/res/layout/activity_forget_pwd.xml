<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whitebackground"
    tools:context=".login.ForgetPwdActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:src="@drawable/ic_launcher"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="密码找回"
        android:textSize="26dp"/>

    <EditText
        android:id="@+id/phoForgetEt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:hint="手机号"
        />
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >

        <TableRow>
            <EditText
                android:id="@+id/mesForgetEt"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="验证码"
                />

            <Button
                android:id="@+id/getMesForgetBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:textSize="16sp"
                android:textColor="#ffffff"
                />
        </TableRow>

    </TableLayout>

    <EditText
        android:id="@+id/pwdForgetEt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:hint="新密码"
        android:inputType="textPassword"
        />

    <EditText
        android:id="@+id/rePwdForgetEt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:hint="确认密码"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/confirmForgetBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:background="@drawable/longbtn"
        android:text="提交"
        android:textSize="18sp"
        android:textColor="#ffffff"
        />

</LinearLayout>